<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h2 class="auth-title">退勤打刻</h2>
      <p class="auth-subtitle">お疲れ様でした！</p>
    </div>

    <%= form_with(model: @attendance, url: attendance_path(@attendance), method: :patch, html: { class: "auth-form" }) do |form| %>
      <div class="form-group">
        <%= form.label :check_out, "退勤日時", class: "form-label" %>
        <%= form.datetime_field :check_out, 
            value: Time.current.strftime('%Y-%m-%dT%H:%M'), 
            class: "form-input" %>
        <small class="form-help">必要に応じて時刻を調整してください</small>
      </div>

      <div class="form-actions">
        <%= form.submit "退勤打刻", class: "btn btn-success btn-full" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= link_to "← ダッシュボードに戻る", attendances_path, class: "back-link" %>
    </div>
  </div>
</div>
